{
  "servers": {
    "github": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${input:github_token}"
      }
    },
    "skills-local": {
      "command": "python",
      "args": [
        "/workspaces/skills-integrate-mcp-with-copilot/mcp_server.py"
      ],
      "cwd": "/workspaces/skills-integrate-mcp-with-copilot"
    }
  },
  "inputs": [
    {
      "type": "promptString",
      "id": "github_token",
      "description": "GitHub Personal Access Token",
      "password": true
    }
  ]
}